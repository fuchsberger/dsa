<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :text %>
  <%= text_input f, :text, class: "input" %>
  <%= error_tag f, :text %>

  <%= label f, :dice %>
  <%= number_input f, :dice, class: "input" %>
  <%= error_tag f, :dice %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
