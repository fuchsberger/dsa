<div class='flex'>
  <%= if input_value(@f, :dice) do %>
    <%= tag_helper :dice, @entry.data["dice1"] %>
    <%= tag_helper :dice, @entry.data["dice2"] %>
    <%= tag_helper :dice, @entry.data["dice3"] %>
