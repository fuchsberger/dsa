<div class='d-flex justify-content-between'>
  <h6 class='mb-0'>
    <button
      class='btn btn-sm btn-link p-0'
      phx-click='toggle'
      phx-value-edit='fate_traits'
      type='button'
    ><i class='icon-<%= if @edit?, do: "cancel", else: "edit" %>'></i></button>
    Schicksalspunkte Sonderfertigkeiten
  </h6>
  <i><%= @ap %> AP</i>
</div>
<hr class='my-1'>

<p class='small<%= if @edit?, do: " is-hidden" %>'>
  <%= for %{id: id} <- @f.source.data.fate_traits do %>
    <span
      data-html='true'
      data-toggle='popover'
      data-trigger='hover'
      data-placement="right"
      data-content='<%= FateTrait.tooltip(id) %>'
    ><%= FateTrait.name(id) %></span>,
  <% end %>
</p>

<table class='table table-xs<%= unless @edit?, do: " is-hidden" %>'>
  <thead>
    <tr>
      <th scope='col'>Name</th>
      <th class='has-text-centered' scope='col'>AP</th>
      <th class='has-text-centered p-0' scope='col'><i class='icon-remove'></i></th>
    </tr>
  </thead>
  <tbody>
  <%= for fs <- inputs_for(@f, :fate_traits) do %>
    <% id = input_value(fs, :id) %>
    <tr >
      <td>
        <span
          data-html='true'
          data-toggle='popover'
          data-trigger='hover'
          data-placement="right"
          data-content='<%= FateTrait.tooltip(id) %>'
        ><%= FateTrait.name(id) %></span>
      </td>
      <td class='has-text-centered'>
        <%= hidden_inputs_for(fs) %>
        <%= FateTrait.ap(id) %>
      </td>
      <td class='has-text-centered p-0'>
        <button
          type='button'
          class='btn btn-link btn-sm p-0'
          phx-click='remove'
          phx-value-id='<%= id %>'
          phx-value-type='fate_trait'
        ><i class='icon-cancel text-danger'></i></button>
      </td>
    </tr>
  <% end %>
  <tr>
    <td colspan='4'>
      <%= select @f, :fate_trait_id, FateTrait.options(),
        class: "form-select-sm",
        prompt: "hinzufÃ¼gen..."
      %>
    </td>
  </tr>
  </tbody>
</table>
