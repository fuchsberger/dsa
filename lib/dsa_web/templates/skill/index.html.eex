<h1 class='heading'><%= gettext("Skills") %></h1>

<div class='lg:grid lg:grid-cols-2 lg:gap-4'>
  <div class='space-y-4'>
    <div class="table-wrapper">
      <table>
        <%= render "table_head.html", category: gettext("Physical Skills"), check: "MU/GE/KK" %>
        <tbody class='bg-white divide-y divide-gray-200'>
          <%= render_many @physical_skills, DsaWeb.SkillView, "table_row.html", conn: @conn %>
        </tbody>
      </table>
    </div>
    <div class="table-wrapper">
      <table>
        <%= render "table_head.html", category: gettext("Social Skills"), check: "IN/CH/CH" %>
        <tbody class='bg-white divide-y divide-gray-200'>
          <%= render_many @social_skills, DsaWeb.SkillView, "table_row.html", conn: @conn %>
        </tbody>
      </table>
    </div>
    <div class="table-wrapper">
      <table>
        <%= render "table_head.html", category: gettext("Nature Skills"), check: "MU/GE/KO" %>
        <tbody class='bg-white divide-y divide-gray-200'>
          <%= render_many @nature_skills, DsaWeb.SkillView, "table_row.html", conn: @conn %>
        </tbody>
      </table>
    </div>
  </div>
  <div class='space-y-4'>
    <div class="table-wrapper">
      <table>
        <%= render "table_head.html", category: gettext("Knowledge Skills"), check: "KL/KL/IN" %>
        <tbody class='bg-white divide-y divide-gray-200'>
          <%= render_many @knowledge_skills, DsaWeb.SkillView, "table_row.html", conn: @conn %>
        </tbody>
      </table>
    </div>
    <div class="table-wrapper">
      <table>
        <%= render "table_head.html", category: gettext("Crafting Skills"), check: "FF/FF/KO" %>
        <tbody class='bg-white divide-y divide-gray-200'>
          <%= render_many @crafting_skills, DsaWeb.SkillView, "table_row.html", conn: @conn %>
        </tbody>
      </table>
    </div>
  </div>
</div>
