<%= f = form_for @changeset_roll,  "#", [
  phx_change: :validate,
  phx_submit: :event,
  no_validate: true
] %>
  <%
    talent = get_talent(f, :trait)
    character = character(assigns)
  %>
  <div class="card mb-3">
    <h5 class="card-header">Eigenschaftsprobe: <%= name(talent) %></h5>
    <div class="card-body text-center">
      <%= hidden_input(f, :trait) %>
      <div class='row g-1'>
        <div class='col-lg-3 '>
          <%= number_input f, :tw, class: "form-control-sm text-center", value: Map.get(character, talent), disabled: true %>
        </div>

        <div class='col-lg-3'>
          <%= checkbox f, :be, class: "form-check-input m-1" %>
        </div>

        <div class='col-lg-3'>
          <%= select f, :modifier, modifier_options(-6..6), class: "form-select-sm" %>
        </div>

        <div class='col-lg-3'>
          <%= submit "WÃ¼rfeln!", class: "w-100 btn btn-primary btn-sm" %>
        </div>
      </div>
      <div class='row g-1'>
        <%= label f, :tw, "Talentwert", class: "col-lg-3" %>
        <%= label f, :be, "Behinderung", class: "col-lg-3 form-check-label" %>
        <%= label f, :modifier, "Modifikator", class: "col-lg-3" %>
        <div class='col-lg-3'></div>
      </div>
    </div>
  </div>
</form>
