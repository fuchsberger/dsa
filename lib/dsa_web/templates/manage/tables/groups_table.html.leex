<%= unless is_nil(@changeset) do %>
  <%= f = form(@changeset) %>
    <div class='row g-2'>

      <div class='col-5'>
        <%= label f, :name %>
        <%= text_input f, :name, placeholder: "Name", class: "form-control-sm" %>
        <%= error_tag f, :name %>
      </div>

      <div class='col-5'>
        <%= label f, :master_id, "Meister" %>
        <%= select f, :master_id, @user_options, class: "form-control-sm", prompt: "bitte wÃ¤hlen..."
        %>
        <%= error_tag f, :master_id %>
      </div>

      <div class='col-2 p-3 text-center'><%= form_buttons() %></div>
    </div>
  </form>
<% end %>

<table class='table table-sm'>
  <thead>
    <tr>
      <th scope='col' class='text-center'>ID</th>
      <th scope='col'>Name</th>
      <th scope='col'>Meister</th>
      <th scope='col'>Manage</th>
      <th scope='col' class='text-center'>
        <button type='button' class='btn btn-sm p-0 btn-link' phx-click='add'>
          <i class='icon-add text-primary'></i>
        </button>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= for group <- @entries do %>
      <tr>
        <td class='text-center'><%= group.id %></td>
        <th scope='row'><%= group.name %></th>
        <td><%= group.master.name %></td>
        <td>
          <button
            type='button'
            class='btn btn-sm py-0 btn-light text-primary'
            phx-click='remove-logs'
            phx-value-group='<%= group.id %>'
          >remove logs</button>
        </td>
        <%= if @admin, do: action_cell(group.id) %>
      </tr>
    <% end %>
  </tbody>
</table>
