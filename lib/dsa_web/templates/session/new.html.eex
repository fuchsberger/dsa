<%= form_for @conn, Routes.session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="card mx-auto" style="max-width: 18rem;">
    <div class="card-body has-text-centered">
      <h5 class="card-title">Login</h5>
      <%= text_input f, :username, placeholder: "Username" %>
      <%= password_input f, :password, class: "form-control my-2", placeholder: "Password" %>
      <%= submit "Log in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
